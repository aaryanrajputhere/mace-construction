datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Material {
  id        Int      @id @default(autoincrement())
  category  String
  itemName  String
  size      String
  unit      String
  price     Float
  image     String?
  createdAt DateTime @default(now())
  @@unique([category, itemName, size, unit, price])
}


model Vendor {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  email     String?
  phone     String?
  notes     String?
  createdAt DateTime @default(now())
}



